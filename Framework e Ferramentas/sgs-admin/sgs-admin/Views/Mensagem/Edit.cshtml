@model sgs_admin.Models.Mensagem

<script type="text/javascript">
    $(function () {
        $("#Inicio").focus();
        switch ($('#LogoImagem').val()) {
            case 'ti':
                $('#ti').attr('checked', true);
                break;

            case 'hac':
                $('#hac').attr('checked', true);
                break;

            case 'uhg':
                $('#uhg').attr('checked', true);
                break;
        }
        
    });
    function rbAltera(id) {
        $('#LogoImagem').val(id);
    }
</script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Mensagem</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label"  style="display: inline-block;">
            @Html.LabelFor(model => model.Inicio)
        </div>
        <div class="editor-field"  style="display: inline-block;">
            @Html.EditorFor(model => model.Inicio)
            @Html.ValidationMessageFor(model => model.Inicio)
        </div>

        <div class="editor-label"  style="display: inline-block;">
            @Html.LabelFor(model => model.Fim)
        </div>
        <div class="editor-field"  style="display: inline-block;">
            @Html.EditorFor(model => model.Fim)
